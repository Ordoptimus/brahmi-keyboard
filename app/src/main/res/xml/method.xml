<!-- The attributes in this XML file provide configuration information -->
<!-- for the Input Method Manager. -->

<!-- Supported subtypes
    keyboard_locale: script_name/keyboard_layout_set

    BRAHMI: Brahmi (India) / Bramhi / 𑀩𑁆𑀭𑀸𑀫𑁆𑀳𑀻

    -->
<!-- TODO: use <lang>_keyboard icon instead of a common keyboard icon. -->
<!-- If IME doesn't have an applicable subtype, the first subtype will be used as a default
     subtype.-->
<input-method xmlns:android="http://schemas.android.com/apk/res/android"
        android:settingsActivity="rkr.simplekeyboard.inputmethod.latin.settings.SettingsActivity"
        android:supportsSwitchingToNextInputMethod="true">

    <subtype android:icon="@drawable/ic_ime_switcher_dark"
            android:label="𑀩𑁆𑀭𑀸𑀫𑁆𑀳𑀻"
            android:subtypeId="0xc182ebd4"
            android:imeSubtypeLocale="BRAHMI"
            android:imeSubtypeMode="keyboard"
            android:imeSubtypeExtraValue="KeyboardLayoutSet=bramhi"
            android:isAsciiCapable="false"
    />

</input-method>
